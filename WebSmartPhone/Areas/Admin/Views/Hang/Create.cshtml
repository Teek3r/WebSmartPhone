@model WebSmartPhone.Models.Brand
@{
    ViewBag.Title = "Create";
}
<div class="container mx-auto style="width: 500px"> 
    <div class="row">
        @using (Html.BeginForm("Create", "Hang", new { area = "Admin" }
        , FormMethod.Post, new { enctype = "multipart/dorm-data" }))
        {
            <div class="col-12 mb-3">
                @Html.LabelFor(r => r.BrandId, "BrandId")
                @Html.TextBoxFor(r => r.BrandId, new { @class = "form-control", placeholder = "BrandId" })
            </div>
            <div class="col-12 mb-3">
                @Html.LabelFor(r => r.Name, "Name")
                @Html.TextBoxFor(r => r.Name, new { @class = "form-control", placeholder = "Name" })
            </div>
            <div class="col-12 mb-3">
                <button type="submit" class="btn btn-outline-primary">Create</button>
                @Html.ActionLink("Cancel", "Index", "Product", new { @class = "btn btn-outline-secondary" })
            </div>
        }
    </div>
</div>