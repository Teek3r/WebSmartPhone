@model WebSmartPhone.Models.Product

<div class="container mx-auto">
    <div class="row">
        @using (Html.BeginForm("Create", "Product",new {area = "Admin"}
        , FormMethod.Post, new { enctype = "multipart/dorm-data" }))
        {
            <div class="col-12 mb-3">
                @Html.LabelFor(r => r.Id, "Id")
                @Html.TextBoxFor(r => r.Id, new { @class = "form-control", placeholder = "Id" })
            </div>
            <div class="col-12 mb-3">
                @Html.LabelFor(r => r.Name, "Name")
                @Html.TextBoxFor(r => r.Name, new { @class = "form-control", placeholder = "Name" })
            </div>
            <div class="col-12 mb-3">
                @Html.LabelFor(r => r.Price, "Price")
                @Html.TextBoxFor(r => r.Price, new { @class = "form-control", placeholder = "Price" })
            </div>
            <div class="col-12 mb-3">
                @Html.LabelFor(r => r.Img_URL, "Img_URL")
                @Html.TextBoxFor(r => r.Img_URL, new { @class = "form-control", placeholder = "Img_URL" })
            </div>
            <div class="col-12 mb-3">
                @Html.LabelFor(r => r.Description, "Description")
                @Html.TextBoxFor(r => r.Description, new { @class = "form-control", placeholder = "Description" })
            </div>
            <div class="col-12 mb-3">
                @Html.LabelFor(r => r.BrandId, "Brand")
                @Html.DropDownListFor(r => r.BrandId, new SelectList(ViewBag.Brand, "BrandId", "Name"), "Chọn", new { @class = "form-control" })
            </div>
            <div class="col-12 mb-3">
                <button type="submit" class="btn btn-outline-primary">Create</button>
                @Html.ActionLink("Cancel", "Index", "Product", new { @class = "btn btn-outline-secondary" })
            </div>
        }
    </div>
</div>